package Apostila;

import java.util.Scanner;

public class EX41 {
public static void main(String[] args) {
		
		Scanner sc = new Scanner(System.in);
		
		System.out.println("Primeira nota do aluno: ");
		float n1 = sc.nextInt();
		
		System.out.println("Segunda nota do aluno: ");
		float n2 = sc.nextInt();
		
		System.out.println("Terceira nota do aluno: ");
		float n3 = sc.nextInt();
		
		float media1 = (n1+n2+n3)/3;

		float media2 = (n1+n2*2+n3*3+media1)/7;
	
		if (media2>9.0){
			System.out.println("Média: A");
		} else if ((media2>=7.5) && (media2<9.0)) {
			System.out.println("Média: B");
		} else if ((media2>=6.0) && (media2<7.5)) {
			System.out.println("Média: C");
		} else {
			System.out.println("Média: D");
		}
		sc.close();
	}
}
